<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:src="@drawable/ic_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </de.hdodenhof.circleimageview.CircleImageView>
        <RelativeLayout
            android:id="@+id/rlComment"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/background_comment"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtUserFirstName"
                android:text="John"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtMessage"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/message"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/txtUserFirstName"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtTime"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/textViewOptions"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/_9sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:id="@+id/rlUplodedData"
                android:layout_below="@+id/txtMessage"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgSelected"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_upload"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/selectedPdf"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/Grey_200"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp">
                        <ImageView
                            android:id="@+id/imgPdf"
                            android:src="@drawable/ic_pdf"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/pdfname"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/cancel"
                            android:layout_toEndOf="@+id/imgPdf"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:id="@+id/Pdf"
                            android:layout_below="@+id/pdfname"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toEndOf="@+id/imgPdf"
                            android:text="PDF"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="@dimen/_30sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="&#8942;"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:textAppearanceLarge" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llLikeDislike"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/rlComment"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llLike"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_8sdp"
                android:focusable="true"
                android:clickable="true"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgLike"
                    android:src="@drawable/ic_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_below="@+id/dividerPost"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtLikeCount"
                    android:text="5"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDisLike"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_8sdp"
                android:focusable="true"
                android:clickable="true"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgUnLike"
                    android:src="@drawable/ic_dislike_foreground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_below="@+id/dividerPost"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtDisLkeCount"
                    android:text="5"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llShare"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_8sdp"
                android:focusable="true"
                android:clickable="true"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgReply"
                    android:src="@drawable/ic_reply_foreground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_below="@+id/dividerPost"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtReplyCount"
                    android:text="5"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgExpandCollapse"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/llLikeDislike"
            android:layout_toRightOf="@+id/imgProfile"
            android:src="@drawable/ic_expand_foreground"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp">
        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReply"
            android:visibility="gone"
            android:layout_toRightOf="@+id/imgExpandCollapse"
            android:layout_below="@+id/llLikeDislike"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgReplyProfile"
            android:layout_toRightOf="@+id/imgExpandCollapse"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/llLikeDislike"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </de.hdodenhof.circleimageview.CircleImageView>
        <RelativeLayout
            android:id="@+id/rlReply"
            android:layout_toRightOf="@+id/imgReplyProfile"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/llLikeDislike"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/background_comment"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtreplyUserFirstName"
                android:text="John"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtreplyMessage"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/message"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/txtreplyUserFirstName"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtReplyTime"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/textReplyViewOptions"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/_9sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/textReplyViewOptions"
                android:layout_width="@dimen/_30sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="&#8942;"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:textAppearanceLarge" />

            <RelativeLayout
                android:id="@+id/rlChildUplodedData"
                android:layout_below="@+id/txtreplyMessage"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgChildSelected"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_upload"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/selectedChildPdf"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/Grey_200"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp">
                        <ImageView
                            android:id="@+id/imgChildPdf"
                            android:src="@drawable/ic_pdf"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/pdfChildname"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/cancel"
                            android:layout_toEndOf="@+id/imgChildPdf"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:id="@+id/ChildPdf"
                            android:layout_below="@+id/pdfChildname"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toEndOf="@+id/imgChildPdf"
                            android:text="PDF"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>