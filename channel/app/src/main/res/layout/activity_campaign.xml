<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frame="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">
        <ImageView
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textColor="@color/colorWhite"
            android:text="@string/campaign"
            android:textSize="@dimen/_12sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_margin="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/redLogo"
                android:src="@drawable/red_logo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">
            </ImageView>
            <TextView
                android:id="@+id/txtName"
                android:layout_toRightOf="@+id/redLogo"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="@string/bit_newsfeed"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtDate"
                android:layout_toRightOf="@+id/redLogo"
                android:layout_below="@+id/txtName"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="@string/bit_newsfeed"
                android:textSize="@dimen/_9sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_below="@+id/txtDate"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtTitleResponsible"
                        android:textColor="@color/colorBlack"
                        android:text="@string/responsible"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txtResponsible"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/responsible"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgPosts"
                            android:src="@drawable/ic_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtPosts"
                            android:textColor="@color/colorPrimary"
                            android:text="15 posts"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgMail"
                            android:src="@drawable/ic_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtMails"
                            android:textColor="@color/colorPrimary"
                            android:text="15 posts"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgRating"
                            android:src="@drawable/ic_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtRatings"
                            android:textColor="@color/colorPrimary"
                            android:text="15 Ratings"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgLike"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtLikeComments"
                            android:textColor="@color/colorPrimary"
                            android:text="15 Likes"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtTitleAverageRating"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/average_rating"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtAverageRating"
                android:layout_toRightOf="@+id/txtTitleAverageRating"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/_25sdp"
                android:text=" "
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll1"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:isIndicator="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RatingBar>
            <TextView
                android:id="@+id/txtTitleMyRating"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/my_rating"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/txtTitleAverageRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtMyRating"
                android:layout_toRightOf="@+id/txtTitleMyRating"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/_25sdp"
                android:text=" "
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/txtTitleAverageRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RatingBar
                android:id="@+id/myratingBar"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:isIndicator="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtTitleAverageRating"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RatingBar>

            <View
                android:id="@+id/divider1"
                android:layout_below="@+id/myratingBar"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorLightGrey"
                android:layout_height="@dimen/_1sdp"
                >

            </View>
            <RatingBar
                android:id="@+id/finalRate"
                android:layout_below="@+id/divider1"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RatingBar>
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_below="@+id/finalRate"
                app:contentPadding="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:text="@string/how_was_your_experience"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@+id/txtTitleAverageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <EditText
                        android:id="@+id/edtRating"
                        android:gravity="top"
                        android:minLines="4"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/border_grey"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnSubmit"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/card"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
</layout>